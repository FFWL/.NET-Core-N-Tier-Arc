@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Last Blogs</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Title </th>
                                <th> Category </th>
                                <th> Date </th>
                                <th> Details </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model) { 
                            <tr>
                                <td>
                                    <img src="@item.blogImage" class="mr-2" alt="image"> 
                                </td>
                                <td>@item.blogTitle</td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.Category.categoryName</label>
                                </td>
                                <td> @(((DateTime)item.blogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                <td>
                                    <a href="/Blog/BlogReadAll/@item.blogID" class="btn btn-dark">Details</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>